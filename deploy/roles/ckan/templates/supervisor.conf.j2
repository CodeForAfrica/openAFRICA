[program:ckan_gather_consumer]

command=nice -n 20 {{ ckan_virtualenv }}/bin/paster --plugin=ckanext-harvest harvester gather_consumer --config="{{ ckan_conf_dir }}/production.ini"
user=ubuntu
numprocs=1
stdout_logfile={{ log_path }}/gather_consumer.log
stderr_logfile={{ log_path }}/gather_consumer.log
autostart=true
autorestart=true
startsecs=10


